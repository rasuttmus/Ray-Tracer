# Select appropriate compiler.
CPP=gcc
#CPP=g++
#CPP=clang++
#CPPFLAGS=-O3 -fopenmp       # Use this for gcc >= 4.2
#CPPFLAGS=-O3               # Use this for gcc <  4.2

ifdef DEBUG
CPPFLAGS=-g
endif

default: all

all: main

main: main.cpp Makefile
